<% include('../layouts/header.ejs') %>
    <h1>Edit User</h1>

    <form action="" method="post">
        <input type="name" name="name" placeholder="Enter name" value="<%= user.name%>" required>
        <br><br>
        <input type="text" name="mno'" placeholder="Enter mobile no." value="<%= user.mobile%>" required>
        <br><br>
        <label> Verified </label>
        <input type="radio" name="verify" value="1" <% if(user.is_verified) { %> checked <%}%> >
            <label> Unverified </label>
            <input type="radio" name="verify" value="0" <% if(!user.is_verified) { %> checked <%}%>>
                <br><br>
                <input type="hidden" name="id" value="<%= user._id%>">
                <input type="submit" value="Update">
    </form>
    <button><a href="/admin/dashboard">GO Dashboard</a></button>
    <% include('../layouts/footer.ejs') %>