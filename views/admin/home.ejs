<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<style>
    img {
        border-radius: 50%;
        margin-bottom: 20px;
        /* margin-left: 50px; */
        width: 100px;
        height: 100px;
    }

    table {
        width: 30%;
        margin-bottom: 15px;
    }

    #edit {
        border-radius: 50%;
    }

    .material-symbols-rounded {
        font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 48
    }

    .material-symbols-outlined {
        font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 48
    }

    .dashboard {
        margin-left: 15px;
        color: gray;
    }

    .edit {
        color: gray;
    }

    .dashboard:hover {
        color: rgb(0, 38, 252);
    }

    .edit:hover {
        color: rgb(0, 38, 252);
    }
</style>
<% include('../layouts/header.ejs') %>
    <h1>WelCome, <%= admin.name%>
    </h1>
    <div>
        <a href="/admin/dashboard" class="dashboard"><span class="material-symbols-outlined">
                dashboard
            </span></a>
        <img src="/userImages/<%= admin.image %>" alt="<%= admin.image %>">
        <!-- <a href="/edit?id=<%=admin._id%>" class="edit"><span class="material-symbols-rounded">
                edit
            </span></a> -->
    </div>

    <table>
        <tr>
            <td>Email :</td>
            <td>
                <%= admin.email %>
            </td>
        </tr>
        <tr>
            <td>Mobile No :</td>
            <td>
                <%= admin.mobile %>
            </td>
        </tr>
    </table>
    <button><a href="/admin/logout">Logout</a></button>
    <% if(typeof message !='undefined' ){ %>
        <h4 style="color: green;">
            <%= message %>
        </h4>
        <% }%>
            <% include('../layouts/footer.ejs') %>