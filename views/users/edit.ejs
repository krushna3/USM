<style>
    img {
        border-radius: 50%;
        margin-bottom: 20px;
        margin-left: 50px;
        width: 100px;
        height: 100px;
    }
</style>
<% include('../layouts/header.ejs') %>
    <img src="userImages/<%= user.image %>" alt="<%= user.image %>">
    <!-- <img src="userImages/<%=user.image%>" alt="<%=user.image%>" width="100px" height="100px"> -->
    <form action="" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
        <br><br>
        <input type="hidden" name="user_id" value="<%= user._id%>">
        <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name">
        <br><br>
        <input type="email" name="email" value="<%= user.email %>" placeholder="Enter email">
        <br><br>
        <input type="text" name="mno" value="<%= user.mobile %>" placeholder="Enter mobile No.">
        <br><br>
        <input type="submit" value="Update Profile">
    </form>
    <% if(typeof message !='undefined' ){ %>
        <h4 style="color: red;">
            <%= message %>
        </h4>
        <% }%>
            <% include('../layouts/footer.ejs') %>