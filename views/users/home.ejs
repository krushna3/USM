<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<style>
    img {
        border-radius: 50%;
        margin-bottom: 20px;
        margin-left: 50px;
        width: 100px;
        height: 100px;
    }

    table {
        width: 30%;
        margin-bottom: 15px;
    }

    #edit {
        border-radius: 50%;
    }

    .material-symbols-rounded {
        font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 48
    }
</style>
<% include('../layouts/header.ejs') %>
    <h1>Welcome, <%= user.name%>
    </h1>
    <div>
        <img src="userImages/<%= user.image %>" alt="<%= user.image %>">
        <a href="/edit?id=<%=user._id%>"><span class="material-symbols-rounded">
                edit
            </span></a>
    </div>
    <table>
        <tr>
            <td>Email :</td>
            <td>
                <%if(!user.temp_email){%>
                    <%= user.email %>
                        <%}else{%>
                            <%= user.temp_email %>
                                <%}%>
            </td>
        </tr>
        <tr>
            <td>Mobile No :</td>
            <td>
                <%= user.mobile %>
            </td>
        </tr>
        <tr>
            <td>Verified :</td>
            <td>
                <% if(user.is_verified===1 && user.temp_verified===1){ %>
                    <p>Yes</p>
                    <% } else{ %>
                        <p><a href="/editVerify">Please Verify</a></p>
                        <% } %>
            </td>
        </tr>
    </table>
    <button><a href="/logout">Logout</a></button>
    <% if(typeof message !='undefined' ){ %>
        <h4 style="color: green;">
            <%= message %>
        </h4>
        <% }%>
            <% include('../layouts/footer.ejs') %>